.dashboard-box
  &-title
    align-items center
    background white
    display flex
    padding 30px 0
  
    &.border
      border-color $gray
      border-style solid
      border-width 0 0 1px 0
    
    h2
      color #5a5a5a
      flex-grow 1
      font-size 27px
    
    &-button
      color $yellow
      cursor pointer
      cursor hand
      margin-right 30px
      with 300px
  
  &-content
    background $light_gray
    
    .emma-input
      color #5a5a5a
      font-size 19px
      margin 5px
      padding 15px
  
  .inline-input-container
    padding 0 10px 0 0
    
    .emma-input
      width 100%