.dashboard-emma-box
  align-items center
  display flex
  
.dashboard-emma-picture-container
  width 250px
  
  img
    display block
    margin 0 auto

.dashboard-emma-data-box
  flex-grow 1
  
.emma-role-selector
  display flex
  width 70%
  
  &-item
    background white
    color $dark_gray !important
    flex-grow 1
    padding 20px
    text-align center
    flex-basis 0
    
    &.active, &:hover
      background $light_gray
    
    &:not(:first-child)
      border-color $border_gray
      border-style solid
      border-width 0 0 0 1px
      
.dashboard-box-title.yellow
  background-color #fdf0cc
  
.emma-hobbies, .adult-hobbies
  column-count 2
  column-gap 100px
  
  .emma-hobbie-item:not(:first-child)
    margin-top 30px
    
  .adult-hobbie-item:not(:first-child)
    margin-top 20px

  .adult-hobbie-item
    font-size 17px