body
  -webkit-font-smoothing antialiased
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%

*,
*:before
*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

div
header
section
article
aside
nav
ul
ol
li
h1
h2
h3
h4
h5
h6
button
p
figure
  margin 0
  padding 0

a
  &:focus
    outline none
.container-overflow
  overflow hidden !important

.col-md-sp-big
  width 30% !important

.col-md-5-half
  width 43% !important

.col-md-4-sp
  width 33%

a
  &:focus
  &:hover
    text-decoration none !important
    outline none
    color white


.img-bench
  width 55px
  height auto


.close
  color white

  &:hover
    color white

.italic-text
  font-style italic
  display inline-flex


.error
  display block
  padding 0.5em
  font-family 'Avenir LT Std Roman'
  white-space nowrap
  color $dark_gray


.errorWhite
  display block
  padding-bottom 0.5em
  padding-left 0.3em
  font-family 'Avenir LT Std Roman'
  font-style 1em
  color white
  text-align left